$ProgressPreference = 'SilentlyContinue'
$exportPath = "C:\Users\Gunzshooter\Documents\Artikelen\Graham Archive\"

$webPage = "https://www.results.philips.com/#/downloads"
$rootpage = 'results.philips.com/'

$psPage = Invoke-WebRequest $webPage

$urls = ($psPage).links | ? {$_.href -like "*.pdf*"} | Select-Object  href,innerText
$urls | ForEach-Object {Invoke-WebRequest -uri ($rootpage+$_.href) -OutFile  ($exportPath+$_.innerText+".pdf")}

Write-Host "... PDF downloading is complete." -ForegroundColor Green
